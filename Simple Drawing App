import pygame

# Initialize pygame
pygame.init()

# Window setup
WIDTH, HEIGHT = 750, 750
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Simple Drawing App with Eraser")

# Colors
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
RED = (255, 0, 0)
BLUE = (0, 0, 255)
GREEN = (0, 255, 0)
YELLOW = (255, 255, 0)

# Fill background
screen.fill(WHITE)
pygame.display.update()

# Track mouse
current_color = BLACK
drawing = False
eraser = False
brush_size = 5

# Main loop
running = True
while running:
    for event in pygame.event.get():
        # Close window
        if event.type == pygame.QUIT:
            running = False
        # Start drawing
        elif event.type == pygame.MOUSEBUTTONDOWN:
            drawing = True
        # Stop drawing
        elif event.type == pygame.MOUSEBUTTONUP:
            drawing = False
        # Keyboard controls
        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_e:  # Toggle eraser
                eraser = not eraser
            elif event.key == pygame.K_c:  # Clear screen
                screen.fill(WHITE)
            elif event.key == pygame.K_r: 
                current_color = RED
            elif event.key == pygame.K_b: 
                current_color = BLUE
            elif event.key == pygame.K_g: 
                current_color = GREEN
            elif event.key == pygame.K_y: 
                current_color = YELLOW
            elif event.key == pygame.K_p: 
                current_color = BLACK
            # Adjust brush size
            elif event.key ==pygame.K_UP:
                brush_size = min(25, brush_size + 1)
            elif event.key ==pygame.K_DOWN:
                brush_size = max(1, brush_size - 1)
                

    # Draw when mouse is pressed
    if drawing:
        mouse_pos = pygame.mouse.get_pos()
        color = WHITE if eraser else current_color
        pygame.draw.circle(screen, color, mouse_pos, brush_size)

    pygame.display.update()

pygame.quit()